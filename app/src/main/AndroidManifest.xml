<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brokenshotgun.runlines">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/app_backup_scheme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" android:mimeType="text/plain" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ReadSceneActivity"
            android:label="@string/title_activity_read_script"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditSceneActivity"
            android:label="@string/title_activity_edit_script"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScriptSceneListActivity"
            android:label="@string/title_activity_script_scene_list"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>